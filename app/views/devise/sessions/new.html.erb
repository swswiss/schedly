<div class="mt-7 max-w-md mx-auto bg-white border border-gray-200 rounded-xl shadow-2xs dark:bg-neutral-900 dark:border-neutral-700">
  <div class="p-4 sm:p-7">
    <div class="text-center">
      <h1 class="block text-2xl font-bold text-gray-800 dark:text-white">
        Sign in
      </h1>
      <p class="mt-2 text-sm text-gray-600 dark:text-neutral-400">
        Donâ€™t have an account?
        <%= link_to "Sign up here",
            new_user_registration_path,
            class: "text-blue-600 decoration-2 hover:underline font-medium dark:text-blue-500" %>
      </p>
    </div>

    <div class="mt-5">
      <%# --- Devise Login Form --- %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="grid gap-y-4">

          <!-- Email -->
          <div>
            <%= f.label :email, class: "block text-sm mb-2 dark:text-white" %>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "py-2.5 sm:py-3 px-4 block w-full border-gray-200 rounded-lg sm:text-sm
                        focus:border-blue-500 focus:ring-blue-500
                        dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400" %>
          </div>

          <!-- Password -->
          <div>
            <%= f.label :password, class: "block text-sm mb-2 dark:text-white" %>
            <%= f.password_field :password,
                autocomplete: "current-password",
                class: "py-2.5 sm:py-3 px-4 block w-full border-gray-200 rounded-lg sm:text-sm
                        focus:border-blue-500 focus:ring-blue-500
                        dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400" %>
          </div>

          <!-- Remember me -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me,
                  class: "shrink-0 mt-0.5 border-gray-200 rounded-sm text-blue-600
                          focus:ring-blue-500 dark:bg-neutral-800 dark:border-neutral-700" %>
              <%= f.label :remember_me, class: "ms-3 text-sm dark:text-white" %>
            </div>
          <% end %>

          <!-- Submit -->
          <%= f.submit "Sign in",
              class: "w-full py-3 px-4 inline-flex justify-center items-center
                      gap-x-2 text-sm font-medium rounded-lg
                      border border-transparent bg-blue-600 text-white
                      hover:bg-blue-700 focus:outline-hidden focus:bg-blue-700" %>
        </div>
      <% end %>

      <div class="mt-4 text-center text-sm">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
